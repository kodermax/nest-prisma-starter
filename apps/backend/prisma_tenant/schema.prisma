generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Admin {
    id         String     @id @default(uuid())
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    email      String     @unique
    firstName  String?
    invitedBy  String?
    middleName String?
    lastName   String?
    password   String?
    phone      String?
    roles      UserRole[]
}

enum UserRole {
    Admin
    User
}
