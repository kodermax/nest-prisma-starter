generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid()) @map("_id")
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    email      String   @unique
    firstName  String
    middleName String?
    lastName   String?
    password   String?
    phone      String?
    roles      Role[]
}

enum Role {
    Admin
    User
}
